generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  username  String @unique
  subtitle  String?
  avatar    String?
  bio       String?
  name      String?
  email     String @unique
}


model Post {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  creator       String
  image         String
  description   String 
  likeCount     Int @default(0)
  createdAt     DateTime @default(now())
  
}

model Comment {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  postId      String @db.ObjectId
  username    String 
  likeCount   Int @default(0)
  createdAt   DateTime @default(now())
  text        String

}